@{
    ViewData["Title"] = "Home Page";
}
@model Login

@{
    ViewData["Title"] = "Login";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        @* <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
    </button> *@
    </div>
}



<div class="container-Login">

    <div class="container-form-login">
        <form method="post" class="form-login">
            <div class="container-login-apresentacao">
                <img src="/assets/depart-plus.svg" class="image-login" alt="...">
                Painel Etym
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Digite seu e-mail:</label>
                <input asp-for="Email" type="email" class="form-control" id="InputEmail" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Digite a sua Senha:</label>
                <input asp-for="Password" type="password" class="form-control" id="InputPassword">
                @* <div id="emailHelp" class="form-text"><a href="#">Esqueci minha senha</a></div> *@
            </div>
            <div class="container-button-entrar">
                <button  type="submit" class="btn button-Entrar btn-primary">Entrar</button>
            </div>

        </form>
    </div>


</div>
